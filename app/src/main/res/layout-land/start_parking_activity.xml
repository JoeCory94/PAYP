<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303F9F">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start\n Parking"
        android:textSize="34sp"
        android:id="@+id/btnStartParking"
        android:background="@drawable/circlebutton"
        android:width="300dp"
        android:height="300dp"
        android:layout_centerInParent="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/btnStartParking">

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLeft"
            android:text="Built By\n\nJoe Cory\n\nBSc Computing"
            android:textSize="22sp"
            android:textColor="#212121"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/btnStartParking">

        <TextView
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textRight"
            android:text="Built By\n\nJoe Cory\n\nBSc Computing"
            android:textSize="22sp"
            android:textColor="#212121"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTop"
        android:text="Pay As You Park"
        android:textSize="52sp"
        android:textColor="#212121"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
