<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#212121" />
            <gradient android:angle="-90" android:startColor="#616161" android:endColor="#aeaeae"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#616161" />
            <solid android:color="#aeaeae"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#212121" />
            <gradient android:angle="-90" android:startColor="#aeaeae" android:endColor="#616161" />
        </shape>
    </item>
</selector>